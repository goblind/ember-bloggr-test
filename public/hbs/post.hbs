{{#if isEditing}}
  {{partial 'post/edit'}}  
{{else}}
  <button class="btn btn-default" {{action 'edit'}}>Edit</button>
  <button id="btnDelete" class="btn btn-default" {{action 'deleteRecord'}}>Delete</button>
{{/if}} 

<h1>{{title}}</h1>
<h2>by {{author}} <small class='muted'>({{format-date date}})</small></h2>

<hr>

<div class='intro'>
  {{format-markdown excerpt}}
</div>

<div class='below-the-fold'>
  {{format-markdown body}}
</div>